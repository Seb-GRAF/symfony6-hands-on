{% extends "base.html.twig" %}

{% block title %}
  All messages
{% endblock %}

{% block body %}
  <div>
    {% if limit > 0 %}
      {% for message in messages|slice(0, limit) %}
        <div>{{ message.message }}</div>
        {{ include ("hello/_message-date.html.twig", {message: message}) }}
      {% endfor %}
    {% else %}
      <div>Nothing here yet</div>
    {% endif %}
  </div>
{% endblock %}
